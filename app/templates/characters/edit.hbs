<label>User
  {{#x-select value=model.player.id class="user-select"}}
  {{#each users}}
    {{#x-option value=id}}
      {{name}}
    {{/x-option}}
  {{/each}}
  {{/x-select}}
</label>
<label>Name: {{input value=model.name}}</label>
<label>Level: {{input type="number" min=1 max=20 value=model.level}}</label>

<div>
  <button id="createButton" {{action "saveCharacter"}}>Save Character</button>
  <button id="deleteButton" {{action "deleteCharacter"}}>Delete Character</button>
</div>
